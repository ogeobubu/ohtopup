    "moment": "^2.30.1",
    "mongoose": "^8.8.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "react-paystack": "^6.0.0",
    "twitter-api-v2": "^1.23.0"
